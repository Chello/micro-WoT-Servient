{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Python current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["build", 
                "-T", "WoT-microcontroller-servient/embeddedWoTServient/cosa/cosa.json",
                "-t", "esp32.txt",
                "-o", "WoT-microcontroller-servient/embeddedWoTServient/options.json"]
        },
        {
            "name": "Debug Node Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args" : ["."],
            "outputCapture": "std"
        }
    ]
}
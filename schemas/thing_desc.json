{
  "title": "Thing",
  "type": "object",
  "id": "thing",
  "required": ["title", "id", "forms"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the Thing",
      "minLength": 4
    },
    "id": {
      "type": "string",
      "description": "URI of the Thing",
      "minLength": 4
    },
    "@context": {
      "type": "array",
      "format": "table",
      
      "description": "JSON schema(s) for Thing",
      "items": {
        "type": "string",
        "properties": {
          "name": "thing_schema"
        }
      },
      "options": {
        "collapsed": true
      },
      "default": ["https://www.w3.org/2019/wot/td/v1"]
    },
    "forms": {
      "type": "array",
      "format": "table",
      "minItems": 1, 
      "maxItems": 1,
      "items": {
        "title": "Operations",
        "type": "object",
        "required": ["op"],
        "properties": {
          "contentType": {
            "const": "application/json", 
            "default": "application/json",
            "options": {
              "hidden": true
            }
          },
          "href": {
            "default": "",
            "const": "",
            "options": {
              "hidden": true
            }
          },
          "op": {
            "name": "operations",
            "type": "array",
            "description": "Operation supported by the Thing",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": ["readallproperties", "writeallproperties", "readmultipleproperties", "writemultipleproperties"]
            }
          }
        }
      }
    },
    "description": {"type": "string"},
    "version": {"type": "string"},
    "support": {"type": "string"},
    "base": {"type": "string"},
    "created": {"type": "string", "format": "date"},
    "modified": {"type": "string", "format": "date"}
  }
}
{
    "title": "Build",
    "type": "object",
    "id": "build",
    "required": ["ssid", "portserver", "portsocket", "libraries"],
    "properties": {
      "ssid": {
        "type": "string",
        "description": "Network SSID to which the Embedded-System will connect",
        "minLength": 4,
        "default": "asdf"
      },
      "password": {
          "type": "string",
          "description": "Network password",
          "default": ""
      },
      "portserver": {
          "type": "string",
          "description": "WebServer port",
          "pattern": "[0-9]",
          "default": "80"
      },
      "portsocket": {
          "type": "string",
          "description": "WebSocket port",
          "pattern": "[0-9]",
          "default": "80"
      },
      "libraries": {
        "type": "array",
        "format": "table",
        "description": "Additional Arduino libraries",
        "uniqueItems": true,
        "items": {
          "title": "libraries",
          "type": "array"
        },
        "options": {
          "collapsed": true
        }
      },
      "constants": {
        "type": "array",
        "format": "table",
        "description": "Additional constants",
        "uniqueItems": true,
        "items": {
          "title": "constants",
          "type": "array"
        },
        "options": {
          "collapsed": true
        }
      }
    }
}